<h1>Listing merchants</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Description</th>
    <th>Affurl</th>
    <th>Imageurl</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @merchants.each do |merchant| %>
  <tr>
    <td><%= merchant.title %></td>
    <td><%= merchant.url %></td>
    <td><%= merchant.description %></td>
    <td><%= merchant.affurl %></td>
    <td><%= merchant.imageurl %></td>
    <td><%= merchant.category %></td>
    <td><%= link_to 'Show', merchant %></td>
    <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
    <td><%= link_to 'Destroy', merchant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

